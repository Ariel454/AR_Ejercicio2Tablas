@model IEnumerable<AR_Ejercicio2Tablas.Models.Promo>

@{
    ViewData["Title"] = "Index";
}

<h1>Menu Promociones</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PromoType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPromo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burguer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PromoType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPromo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Burguer.BurguerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PromoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PromoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PromoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
